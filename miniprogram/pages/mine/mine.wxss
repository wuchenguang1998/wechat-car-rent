/* pages/mine/mine.wxss */
.userband{
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #b8b3b3;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userband view{
  display: flex;
  flex-direction: column;
}
.userband image{
  width: 130rpx;
  height: 130rpx;
  margin: 0 40rpx 0 20rpx;
  border-radius: 130rpx;
}
.userband text{
  font-size: 30rpx;
  font-weight: 200;
  line-height: 50rpx;
}