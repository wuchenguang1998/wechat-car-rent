/* pages/product-item/product-item.wxss */
.container{
  width: 95%;
  margin: 0 auto 120rpx auto;
}
swiper{
  height: 400rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
image{
  width: 100%;
  border-radius: 10rpx;
}
.content{
  margin-top: 20rpx;
  padding: 18rpx;
  background-color: #f6f6f6;
  border-radius: 18rpx;
}
.messcontent{
  height: 80rpx;
}
.messcontent .title{
  font-size: 55rpx;
}
.messcontent .price{
  float: right;
  display: block;
  margin-top: 11rpx;
  font-size: large;
  color: rgb(243, 40, 40);
}
.alert{
  display: flex;
  flex-direction: column;
  background-color: white;
  color: #9d9d9d;
  border-radius: 12rpx;
}
.detail{
  margin-top: 22rpx;
}
.detail image{
  margin: 16rpx 0;
}
.commentcontainer{
  border: blue solid 1rpx;
  border-radius: 10rpx;
}
.commentcontainer .title{
  height: 60rpx;
  border-bottom: blue solid 2rpx;
  background-color: #cac8c8;
  line-height: 60rpx;
  font-size: 35rpx;
}
.commentcontainer .title .commentcounter{
  margin-left: 15rpx;
}
.commentcontainer .title .lookmore{
  float: right;
  margin-right: 15rpx;
}
.usercomment{
  margin: 15rpx;
  border-bottom: #9d9d9d solid 1rpx;
}
.usermsg{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.usermsg image{
  width: 65rpx;
  height: 65rpx;
  border-radius: 65rpx;
  margin-right: 22rpx;
}
.usermsg text{
  font-size: 40rpx;
}
.commentdetail{
  color: rgb(68, 65, 65);
  font-weight: normal;
  margin-bottom: 8rpx;
}
